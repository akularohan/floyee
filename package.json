{
    "name": "Flowy",
    "version": "1.0.0",
    "description": "Flowy - Professional Task Management App with Real-time Collaboration",
    "keywords": [
        "task-management",
        "kanban",
        "collaboration",
        "react",
        "nodejs",
        "tailwind"
    ],
    "author": "Rohan Akula",
    "license": "MIT",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server.js",
        "client": "cd client && npm start",
        "build": "cd client && npm run build",
        "install-all": "npm install && cd client && npm install",
        "clean": "rmdir /s /q node_modules client\\node_modules 2>nul || true",
        "reset": "npm run clean && npm run install-all"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "mongoose": "^8.17.1",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "nodemon": "^3.0.1"
    }
}
